<section class="video-banner">
  <div class="container">
    <p class="label">Workspace Tour</p>
    <h2 class="banner-title">Erlebe FactorAI</h2>
    <div class="video-wrapper">
      <video autoplay muted loop playsinline>
        <source src="/factorai-website/images/workspace-tour-sm.mp4" type="video/mp4" />
      </video>
      <div class="video-overlay">
        <p class="banner-quote">"Der Ort, wo Technologie auf Gemeinschaft trifft."</p>
        <p class="banner-location">Stelleweg 4 Â· 7000 Chur Nord</p>
      </div>
    </div>
  </div>
</section>

<style>
  .video-banner {
    padding: 0 24px 100px;
  }
  .label {
    text-align: center;
    font-size: 13px;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
  }
  .banner-title {
    text-align: center;
    font-size: 40px;
    font-weight: 700;
    margin-bottom: 40px;
  }
  .video-wrapper {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-dark);
  }
  .video-wrapper video {
    width: 100%;
    height: 480px;
    object-fit: cover;
    display: block;
  }
  .video-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(15,15,15,0.7) 0%, transparent 50%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 40px;
    pointer-events: none;
  }
  .banner-quote {
    font-size: 24px;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 8px;
    font-style: italic;
  }
  .banner-location {
    font-size: 15px;
    color: var(--color-primary);
    font-weight: 500;
    letter-spacing: 1px;
  }
  @media (max-width: 768px) {
    .video-wrapper video { height: 280px; }
    .banner-quote { font-size: 18px; }
    .banner-title { font-size: 28px; }
    .video-overlay { padding: 24px; }
  }
</style>
