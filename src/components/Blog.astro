---
const posts = [
  { category: 'Community', date: 'Jan 2026', title: 'Warum Coworking die Zukunft der Arbeit ist', image: '/images/1a17bc54ee0d.jpg' },
  { category: 'Startups', date: 'Feb 2026', title: '5 Gründe, warum Chur der perfekte Startup Standort ist', image: '/images/31046d483b4d.jpg' },
  { category: 'Productivity', date: 'Mär 2026', title: 'So steigerst du deine Produktivität im Coworking', image: '/images/3d4162c437d7.jpg' },
];
---

<section class="blog section" id="blog">
  <div class="container">
    <h2 class="blog-title">Insights und Updates</h2>
    <div class="blog-grid">
      {posts.map(post => (
        <a href="#" class="blog-card">
          <div class="blog-img">
            <img src={post.image} alt={post.title} />
          </div>
          <div class="blog-meta">
            <span class="blog-category">{post.category}</span>
            <span class="blog-read">Lesen</span>
          </div>
          <p class="blog-date">{post.date}</p>
          <h3>{post.title}</h3>
        </a>
      ))}
    </div>
    <div class="blog-more">
      <a href="#" class="btn btn-outline">Mehr lesen</a>
    </div>
  </div>
</section>

<style>
  .blog-title {
    text-align: center;
    font-size: 40px;
    font-weight: 600;
    margin-bottom: 48px;
  }
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .blog-card {
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-gray-200);
    transition: transform 0.2s, box-shadow 0.2s;
    display: block;
  }
  .blog-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.06);
  }
  .blog-img img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .blog-meta {
    display: flex;
    justify-content: space-between;
    padding: 16px 20px 0;
  }
  .blog-category {
    font-size: 12px;
    font-weight: 600;
    color: var(--color-primary);
    background: var(--color-primary-light);
    padding: 4px 12px;
    border-radius: var(--radius-full);
  }
  .blog-read {
    font-size: 13px;
    color: var(--color-gray-500);
  }
  .blog-date {
    padding: 8px 20px 0;
    font-size: 13px;
    color: var(--color-gray-500);
  }
  .blog-card h3 {
    padding: 8px 20px 20px;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.4;
  }
  .blog-more {
    text-align: center;
    margin-top: 32px;
  }
  @media (max-width: 768px) {
    .blog-title {
      font-size: 28px;
    }
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
